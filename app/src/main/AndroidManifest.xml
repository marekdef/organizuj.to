<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.mobilization.organizuj.to.client" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="pl.mobilization.organizuj.to.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="pl.mobilization.organizuj.to.AttendeesProvider"
            android:authorities="pl.mobilization.organizuj.to.attendees" />

        <service
            android:name="pl.mobilization.organizuj.to.UpdateAttendanceIntentService"
            android:exported="false" >
        </service>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
